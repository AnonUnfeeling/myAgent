<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Start"
    android:background="#635fe7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/loginEdit"
        android:layout_marginBottom="89dp"
        android:background="@android:color/white"
        android:layout_above="@+id/enterBtn"
        android:layout_centerHorizontal="true"
        android:hint="email@domail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passEdit"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/loginEdit"
        android:layout_alignStart="@+id/loginEdit"
        android:hint="password"
        android:background="@android:color/white"
        android:layout_alignRight="@+id/loginEdit"
        android:layout_alignEnd="@+id/loginEdit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterBtn"
        android:src="@drawable/login_button01"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:baselineAlignBottom="false"
        android:background="#00000000" />

</RelativeLayout>
